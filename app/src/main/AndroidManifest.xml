<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="sample.ijoic.translucent_layout">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".cases.FullPageActivity"
      android:theme="@style/AppTheme.NoTitleBar.TransparentStatusBar"/>

    <activity android:name=".cases.SimpleTitleActivity"
      android:theme="@style/AppTheme.NoTitleBar.TransparentStatusBar"/>

    <activity android:name=".cases.ScrollHeaderActivity"
      android:theme="@style/AppTheme.NoTitleBar.TransparentStatusBar"/>

    <activity android:name=".cases.DrawerTabHostActivity"
      android:theme="@style/AppTheme.NoTitleBar.TransparentStatusBar"/>

  </application>

</manifest>