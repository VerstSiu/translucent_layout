<?xml version="1.0" encoding="utf-8"?>
<com.ijoic.translucent_layout.TransFrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <com.ijoic.translucent_layout.v4.TransNestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.ijoic.translucent_layout.TransLinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true">

      <!-- hack parent -->
      <com.ijoic.translucent_layout.TransLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/wallpaper_page_bg"
        android:fitsSystemWindows="true">

        <View
          android:id="@+id/display_header"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      </com.ijoic.translucent_layout.TransLinearLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="800dp"/>
    </com.ijoic.translucent_layout.TransLinearLayout>
  </com.ijoic.translucent_layout.v4.TransNestedScrollView>

  <View
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</com.ijoic.translucent_layout.TransFrameLayout>