<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
  </style>

  <style name="AppTheme.NoTitleBar.TransparentStatusBar">
  </style>

  <style name="AppTheme.TitleText">
    <item name="android:textSize">@dimen/theme_title_text_size</item>
    <item name="android:textColor">@color/theme_title_text_color</item>
  </style>

  <style name="AppTheme.TitleButton">
    <item name="android:minWidth">@dimen/theme_title_button_min_width</item>
    <item name="android:minHeight">@dimen/theme_title_button_min_height</item>
    <item name="android:scaleType">center</item>
    <item name="android:background">@null</item>
  </style>

</resources>
